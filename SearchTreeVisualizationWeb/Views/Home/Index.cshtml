@{
    ViewData["Title"] = "Strona domowa";
}

<link rel="stylesheet" href="~/css/site.css" />

<div class="col-lg-12 mt-5">
    <h2>1. Budowanie drzewa binarnego</h2>
    <label>Wprowadź wartość węzła: </label>
    <input type="number" id="node" name="node" class="form-control" />
    <br />
    <a class="btn btn-primary" style="color: white;" onclick="add()">Dodaj</a>
    <a class="btn btn-secondary" style="color: white;" onclick="clearTree()">Wyczyść</a>
    <br />
    <br />
    <canvas id="myCanvas" width="1370" height="1000" style="border: 2px dashed black"></canvas>
</div>

<div class="col-lg-12 mt-5">
    <h2>2. Szukanie w zbudowanym drzewie binarnym</h2>
    <label>Wprowadź szukaną wartość węzła: </label>
    <input type="number" id="findNode" name="findNode" class="form-control" />
    <br />
    <a class="btn btn-primary" style="color: white;" onclick="findNode()">Szukaj</a>
    <br />
    <br />
    <canvas id="myCanvasFind" width="1370" height="1000" style="border: 2px dashed black"></canvas>
</div>

<script src="~/js/site.js" asp-append-version="true"></script>